{
  "private": true,
  "sideEffects": false,
  "platform": "node",
  "scripts": {
    "build": "run-s build:*",
    "build:remix": "remix build",
    "build:css": "tailwindcss -m -i ./app/styles/main.css -o ./app/tailwind.css",
    "build:server": "esbuild --platform=node --format=cjs ./server.ts --outdir=build",
    "build:sanity": "cd sanity && npm i && sanity build ../public/studio -y",
    "dev": "concurrently \"yarn run dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -w -i ./app/styles/main.css -o ./app/tailwind.css",
    "start": "cross-env NODE_ENV=production node ./build/server.js"
  },
  "dependencies": {
    "@portabletext/react": "^1.0.6",
    "@prisma/client": "4.5.0",
    "@remix-run/express": "^1.7.6",
    "@remix-run/node": "^1.7.2",
    "@remix-run/react": "^1.7.2",
    "@sanity/image-url": "^1.0.1",
    "@splinetool/react-spline": "^2.2.3",
    "@splinetool/runtime": "^0.9.123",
    "@tabler/icons": "^1.104.0",
    "@vercel/node": "^2.4.4",
    "cross-env": "^7.0.3",
    "express": "^4.18.2",
    "ioredis": "^5.2.4",
    "picosanity": "^4.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-syntax-highlighter": "^15.5.0",
    "react-top-loading-bar": "^2.3.1",
    "remix-utils": "^3.3.0",
    "slugify": "^1.6.5"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.7.2",
    "@remix-run/eslint-config": "^1.7.2",
    "@remix-run/serve": "^1.7.2",
    "@sanity/cli": "^2.35.0",
    "@types/express": "^4.17.14",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@types/react-syntax-highlighter": "^15.5.5",
    "autoprefixer": "^10.4.12",
    "concurrently": "^7.4.0",
    "eslint": "^8.23.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.18",
    "prisma": "4.5.0",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">=14"
  }
}
